    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: file as Module",
            "type": "python",
            "request": "launch",
            "module": "stubber.publish.${fileBasenameNoExtension}",
            "justMyCode": false
        },
        {
            "name": "mpremote",
            "type": "python",
            "request": "launch",
            "module": "mpremote",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "args": [
                "resume",
                "exec",
                "print(42)",
            ]
        },
        {
            "name": "Python: stubber - cmdline",
            "type": "python",
            "request": "launch",
            "module": "stubber.stubber",
            "cwd": "${workspaceFolder}",
            "args": [
                "-v",
                "merge",
                "--version",
                "v1.19.1"
                // "get-frozen",
                // "get-frozen",
                // "publish",
                // "--version",
                // "v1.19.1",
                // "--port",
                // "esp32",
                // "--test-pypi"
                // "--dry-run",
                //
                // "minify",
                // "--all",
                // "--compile",
                //
                // "show-config",
                //
                // "publish",
                // "--test-pypi",
                // "--version",
                // "1.18",
                // "--port",
                // "esp32",
                // "--force",
                // "clone"
                // "${input:cmdlineParams}"
            ]
        },
        {
            "name": "Python: stubber get-docstubs",
            "type": "python",
            "request": "launch",
            "module": "stubber.stubber",
            "args": [
                "get-docstubs"
            ]
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            // "cwd": "${fileDirname}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: this File - Args ",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "${input:cmdlineParams}"
            ]
        },
        {
            "name": "Micro-CPython: Current File",
            "type": "python",
            "subProcess": false,
            "justMyCode": true,
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "console": "integratedTerminal",
            "env": {
                // patch python path with CPYTHON replacements
                //"PYTHONPATH": "all-stubs/cpython_core"
                //"PYTHONPATH": "${workspaceFolder}/tests/mocks/pycopy-cpython_core"
                "PYTHONPATH": "${workspaceFolder}/tests/mocks/micropython-cpython_core;${workspaceFolder}/tests/mocks/machine"
            },
        },
        {
            "name": "Python: Debug process --path",
            "type": "python",
            "request": "launch",
            "console": "integratedTerminal",
            "program": "${file}",
            "args": [
                "--path",
                "./temp"
            ]
        },
        {
            "name": "Debug pytest tests",
            "purpose": [
                "debug-test"
            ],
            "type": "python",
            "request": "launch",
            "console": "integratedTerminal",
            "justMyCode": false,
            "stopOnEntry": false,
            // false : Avoid debugpy trying to debug micropython
            // but may cause issue with pytest-cov coverage reporting 
            "subProcess": false,
        },
        {
            "name": "PowerShell Launch Current File",
            "type": "PowerShell",
            "request": "launch",
            "script": "${file}",
            "cwd": "${file}"
        },
    ],
    "inputs": [
        {
            "id": "cmdlineParams",
            "type": "promptString",
            "description": "commandline parameters",
            "default": ""
        }
    ]
}