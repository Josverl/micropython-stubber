// https://github.com/microsoft/pyright/blob/main/docs/configuration.md
{
    "include": [
        "src",
        "tests",
        "board",
        "minified",
    ],
    "exclude": [
        // other artefacts
        "**/node_modules",
        "**/__pycache__",
        // minified do not adhere to readability 
        "minified",
        // not my code 
        "src/libs/*.py",
        // generated stubs 
        "board/stubs",
        // test data 
        "tests/data",
        "tests/mocks"
    ],
    "ignore": [
        "data",
        "all_stubs",
    ],
    "pythonVersion": "3.8",
    "pythonPlatform": "Linux",
    "stubPath": "./typings",
    "reportMissingImports": true,
    "reportMissingTypeStubs": false,
    "reportInvalidStringEscapeSequence": "information",
    "reportUnboundVariable": "warning",
    "executionEnvironments": [
        {
            "root": "board",
            "extraPaths": [
                "board/lib",
                //"all-stubs/cpython_core-pycopy",
                "all-stubs/cpython_core-micropython",
                "all-stubs/micropython-v1_17-frozen/esp32/RELEASE",
                "all-stubs/micropython-v1_17-esp32",
                "all-stubs/micropython-v1_17-pyboard",
                //                "all-stubs/micropython-latest-docstubs",
            ],
            "verboseOutput": true
        },
        {
            "root": "src",
        },
        {
            "root": "tests",
            "extraPaths": [
                "src",
            ]
        },
        {
            "root": "all-stubs",
            "extraPaths": [
                "board/lib",
                "all-stubs/cpython_core-pycopy",
                // "all-stubs/micropython-v1_17-frozen/esp32/RELEASE",
                // "all-stubs/micropython-v1_17-esp32",
                // "all-stubs/micropython-v1_17-pyboard",
                "all-stubs/micropython-latest-docstubs",
            ],
            "verboseOutput": true,
            "reportWildcardImportFromLibrary": "information",
            "reportUnboundVariable": "information",
        },
    ]
}