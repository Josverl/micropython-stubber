// https://github.com/microsoft/pyright/blob/main/docs/configuration.md
{
    "include": [
        "src",
        "tests",
        "board",
        "minified",
    ],
    "exclude": [
        "**/node_modules",
        "**/__pycache__",
        "minified",
        "tests/data",
        "tests/mocks"
    ],
    "ignore": [
        "data",
        "all_stubs",
    ],
    "stubPath": "./typings",
    "reportMissingImports": true,
    "reportMissingTypeStubs": false,
    "pythonVersion": "3.8",
    "pythonPlatform": "Linux",
    "reportInvalidStringEscapeSequence": "information",
    "reportUnboundVariable": "warning",
    "executionEnvironments": [
        {
            "root": "board",
            "pythonVersion": "3.6",
            "pythonPlatform": "Linux",
            "extraPaths": [
                "board/lib",
                "generated/micropython/v1_17-nightly",
                // "all-stubs/cpython-core",
                // "all-stubs/micropython-1_15-frozen/esp32/GENERIC",
                // "all-stubs/micropython-esp32-1_15"
            ],
            "verboseOutput": true
        },
        {
            "root": "src",
        },
        {
            "root": "tests",
            // "extraPaths": [
            //     "tests/mocks",
            // ]
        }
    ]
}