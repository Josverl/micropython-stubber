// https://github.com/microsoft/pyright/blob/main/docs/configuration.md
{
    "include": [
        "esp32",
        "pyboard",
        "rp2",
        "esp8266",
        "mpylib",
    ],
    "exclude": [],
    "ignore": [],
    "pythonVersion": "3.9",
    "pythonPlatform": "All",
    "verboseOutput": true,
    "reportMissingImports": "error",
    "reportMissingModuleSource": "warning",
    "reportMissingTypeStubs": "warning",
    "typeshedPath": "../stubs/mpy-typeshed",
    // Do not specify extraPath at toplevel
    // See https://github.com/microsoft/pyright/issues/2924
    "logLevel": "Trace",
    "executionEnvironments": [
        {
            "root": "esp32",
            "extraPaths": [
                "../all-stubs/micropython-v1_18-frozen/esp32/GENERIC",
                "../all-stubs/micropython-v1_18-esp32"
                // TODO: use All-stubs ?
            ]
        },
        {
            "root": "pyboard",
            "extraPaths": [
                "../all-stubs/micropython-v1_18-frozen/stm32/GENERIC",
                "../all-stubs/micropython-v1_18-pyboard"
            ]
        },
        {
            "root": "rp2",
            "extraPaths": [
                "../all-stubs/micropython-v1_18-frozen/rp2/GENERIC",
                "../all-stubs/micropython-v1_18-rp2"
            ]
        },
        {
            "root": "esp8266",
            "extraPaths": [
                "../all-stubs/micropython-v1_17-frozen/esp8266/GENERIC",
                "../all-stubs/micropython-v1_17-esp8266"
            ]
        },
    ]
}